<div class="container w-50 p-5 my-5 shadow">


    {{!-- Form --}}
    <form action="/users/update/{{user._id}}" method="post">
        {{!-- Button --}}
        <div class="row mb-3">
            <a class="btn btn-dark col-auto me-auto" href="/users/list/{{page}}"><i class="fa-solid fa-arrow-left"></i>
                Back</a>
            <code class="mx-auto col-auto">{{notify}}</code>
            <button type="submit" class="btn btn-primary col-auto ms-auto">Update User</button>
        </div>

        {{!-- Input --}}
        {{> user_input}}

    </form>


</div>